@using One.Toast
@using One.Toast.Configuration
@inherits LayoutComponentBase
<OneToasts Position="ToastPosition.TopRight"
           Timeout="100"
           IconType="IconType.one"
           ErrorIcon=""
           InfoIcon=""
           SuccessIcon=""
           WarningIcon=""
           ShowProgressBar="@true"
           ShowCloseButton="@true"
           DisableTimeout="@false"
           MaxToastCount="10">
    <CloseButtonContent>
        <div>
            <span class="myCloseButtonStyleClass">&times;</span>
        </div>
    </CloseButtonContent>
</OneToasts>
<div class="page">    
    <main>      
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
